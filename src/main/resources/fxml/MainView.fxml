<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ferre.controller.MainController">
    <top>
        <HBox spacing="12" styleClass="topbar">
            <children>
                <Label text="Sistema de Facturación — Ferretería" styleClass="title"/>
                <Label fx:id="statusLabel" text="Estado: —" styleClass="status"/>
            </children>
            <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="16">
            <children>
                <Button text="Probar conexión" onAction="#testConnection"/>
                <Button text="Salir" onAction="#exitApp"/>
            </children>
        </HBox>
    </center>
</BorderPane>
