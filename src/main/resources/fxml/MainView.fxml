<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ferre.controller.MainController">
    <top>
        <VBox>
            <MenuBar>
                <menus>
                    <Menu text="Sistema">
                        <items>
                            <MenuItem text="Cerrar sesión" onAction="#logout"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="Salir" onAction="#exitApp"/>
                        </items>
                    </Menu>

                    <Menu text="Administración" fx:id="menuAdmin">
                        <items>
                            <MenuItem text="Usuarios" onAction="#openUsuarios"/>
                        </items>
                    </Menu>

                    <!-- NUEVO -->
                    <Menu text="Catálogos" fx:id="menuCatalogos">
                        <items>
                            <MenuItem text="Productos" onAction="#openProductos"/>
                            <MenuItem text="Proveedores" onAction="#openProveedores"/>
                            <MenuItem text="Clientes" onAction="#openClientes"/>
                        </items>
                    </Menu>

                    <Menu text="Bodega" fx:id="menuBodega">
                        <items>
                            <MenuItem text="Ingreso" onAction="#openIngreso"/>
                        </items>
                    </Menu>

                    <Menu text="Ventas" fx:id="menuVentas">
                        <items>
                            <MenuItem text="Nuevo Pedido" onAction="#openNuevoPedido"/>
                            <MenuItem text="Facturar Pedido" onAction="#openFacturar"/>
                        </items>
                    </Menu>

                    <Menu text="Caja" fx:id="menuCaja"/>
                    
                    <Menu text="Reportes" fx:id="menuReportes">
                        <items>
                            <MenuItem text="Ventas por fecha" onAction="#openRptVentas"/>
                            <MenuItem text="Inventario / Stock" onAction="#openRptStock"/>
                            <MenuItem text="Kárdex por producto" onAction="#openRptKardex"/>
                        </items>
                    </Menu>

                </menus>
            </MenuBar>

            <HBox spacing="12" styleClass="topbar">
                <children>
                    <Label text="Sistema de Facturación — Ferretería" styleClass="title"/>
                    <Label fx:id="lblSesion" styleClass="status"/>
                </children>
                <padding>
                    <Insets top="8" right="12" bottom="8" left="12"/>
                </padding>
            </HBox>
        </VBox>
    </top>

    <center>
        <BorderPane fx:id="content" />
    </center>
</BorderPane>
