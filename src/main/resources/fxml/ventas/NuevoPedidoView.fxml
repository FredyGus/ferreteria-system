<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ferre.controller.NuevoPedidoController">
    <top>
        <VBox>
            <HBox spacing="10">
                <children>
                    <Label text="Nuevo Pedido" styleClass="title"/>
                    <Label fx:id="lblTotal" styleClass="status"/>
                </children>
                <padding><Insets top="8" right="12" bottom="8" left="12"/></padding>
            </HBox>

            <GridPane hgap="8" vgap="8" style="-fx-padding: 0 12 8 12;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <children>
                    <Label text="Cliente:" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cmbCliente" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Vendedor:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <Label fx:id="lblVendedor" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <Label text="Observaciones:" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtObs" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
                </children>
            </GridPane>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tbl" prefHeight="360" style="-fx-padding: 0 12 0 12;">
            <columns>
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="120"/>
                <TableColumn fx:id="colNombre" text="Producto" prefWidth="220"/>
                <TableColumn fx:id="colCantidad" text="Cant." prefWidth="80"/>
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="8">
            <Separator/>
            <GridPane hgap="8" vgap="8" style="-fx-padding: 0 12 0 12;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <children>
                    <Label text="Producto:"/>
                    <ComboBox fx:id="cmbProducto" GridPane.columnIndex="1"/>

                    <Label text="Cantidad:" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtCantidad" GridPane.columnIndex="3"/>

                    <Label text="Precio:" GridPane.columnIndex="4"/>
                    <TextField fx:id="txtPrecio" GridPane.columnIndex="5"/>
                </children>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="8" style="-fx-padding: 0 12 12 12;">
                <children>
                    <Button text="Agregar ítem" onAction="#agregarItem"/>
                    <Button text="Eliminar ítem" onAction="#eliminarItem"/>
                    <Button text="Nuevo" onAction="#nuevo"/>
                    <Button text="Guardar pedido" onAction="#guardar" defaultButton="true"/>
                </children>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
