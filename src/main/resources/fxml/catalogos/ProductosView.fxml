<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ferre.controller.ProductosController">
    <top>
        <HBox spacing="10">
            <children>
                <Label text="Productos" styleClass="title"/>
                <TextField fx:id="txtBuscar" promptText="Buscar por código o nombre" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblInfo" styleClass="status"/>
            </children>
            <padding><Insets top="8" right="12" bottom="8" left="12"/></padding>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tbl" prefHeight="360">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="120"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="220"/>
                <TableColumn fx:id="colUnidad" text="Unidad" prefWidth="80"/>
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                <TableColumn fx:id="colActivo" text="Activo" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="8">
            <Separator/>
            <GridPane hgap="8" vgap="8">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <children>
                    <Label text="Código:" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Nombre:" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Unidad:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtUnidad" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                    <Label text="Precio:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtPrecio" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                    <Label text="Stock:" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtStock" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="Proveedor:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                    <ComboBox fx:id="cmbProveedor" GridPane.rowIndex="2" GridPane.columnIndex="3" promptText="(opcional)"/>
                </children>
            </GridPane>
            <HBox spacing="8" alignment="CENTER_RIGHT">
                <children>
                    <Button text="Nuevo" onAction="#nuevo"/>
                    <Button text="Guardar" onAction="#guardar" defaultButton="true"/>
                    <Button text="Activar/Desactivar" onAction="#toggleEstado"/>
                </children>
                <padding><Insets right="12" bottom="12"/></padding>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
