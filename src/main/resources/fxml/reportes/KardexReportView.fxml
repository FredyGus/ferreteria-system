<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ferre.controller.reportes.KardexReportController" spacing="10">
    <children>
        <Label text="Kárdex por producto" styleClass="title"/>
        <GridPane hgap="8" vgap="8">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Producto:"/>
                <ComboBox fx:id="cmbProducto" GridPane.columnIndex="1"/>

                <Label text="Desde:" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpDesde" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Hasta:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <DatePicker fx:id="dpHasta" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            </children>
        </GridPane>
        <Button text="Ver Kárdex" onAction="#ver" defaultButton="true"/>
    </children>
    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
</VBox>
